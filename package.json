{
  "name": "session-recorder",
  "version": "1.0.0",
  "description": "Browser session recorder for capturing user interactions with Playwright",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "node dist/test/simple-test.js",
    "test:spa": "node dist/test/spa-test.js",
    "test:console": "node dist/test/console-test.js",
    "test:voice": "node dist/test/voice-test.js",
    "session-recorder:install:windows": "npm ci && npm run playwright:install && npm run voice:install:windows",
    "session-recorder:install:mac-linux": "npm ci && npm run playwright:install && npm run voice:install:mac-linux",
    "session-viewer:install": "cd viewer && npm i",
    "playwright:install": "npx playwright install",
    "voice:install:windows": "cd src/voice && python -m venv .venv && .venv\\Scripts\\activate && pip install -r requirements.txt",
    "voice:install:mac-linux": "cd src/voice && python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "voice:build": "cd src/voice && python build_voice_recorder.py",
    "voice:build:clean": "cd src/voice && python build_voice_recorder.py --clean",
    "voice:build:dev": "cd src/voice && python build_voice_recorder.py --dev",
    "prerecord": "npm run build",
    "record": "node dist/test/record-session.js",
    "prerecord:browser": "npm run build",
    "record:browser": "node dist/test/record-session.js --mode browser",
    "prerecord:voice": "npm run build",
    "record:voice": "node dist/test/record-session.js --mode voice",
    "prerecord:full": "npm run build",
    "record:full": "node dist/test/record-session.js --mode full",
    "prerecord:connect": "node dist/test/record-session.js",
    "record:connect": "node dist/test/record-session.js --mode full --connect 9222",
    "viewer-old": "node dist/src/viewer/server.js",
    "viewer": "cd viewer && npm run dev"
  },
  "keywords": [
    "playwright",
    "session-recorder",
    "user-actions",
    "snapshot",
    "screenshot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "archiver": "^7.0.1",
    "express": "^4.18.2",
    "node-notifier": "^10.0.1",
    "systray2": "^2.1.4"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-notifier": "^8.0.5",
    "typescript": "^5.3.0"
  }
}
